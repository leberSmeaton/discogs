<h1>Create a new band</h1>
<form action="<%=bands_path%>" method="POST">
    <div class='field'>
        <label>Name</label>
        <input type="text" name="band[name">
    </div>

    <div class='field'>
        <label>Genre</label>
        <select name="band[genre_id]">
            <% @genres.each do |genre| %>
                <option value=<%=genre.id%>><%= genre.name %></option>
            <% end %>
        </select>
    </div>

    <div class='field'>
        <label>Description</label>
        <textarea name="band[description]"></textarea>
    </div>

    <input type="submit" value="Create A Band!">
</form>