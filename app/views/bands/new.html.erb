<h1>Create a new band</h1>

<% if @band.errors.any? %>
    <h3><%= pluralize(@band.errors.count, "error") %>
    prevented band being saved.</h3>
<% end %>
<form action="<%=bands_path%>" method="POST">
    <div class='field'>
        <label>Name</label>
        <input type="text" name="band[name]"/>

        <% if @band&.errors&.messages[:name]&.length > 0 %>
            <p class="error-text"><%= "Name " + @band&.errors&.messages[:name].join(", ") %></p>
        <% end %>

    </div>

    <div class='field'>
        <label>Genre</label>
        <select name="band[genre_id]">
            <% @genres.each do |genre| %>
                <option value=<%=genre.id%>><%= genre.name %></option>
            <% end %>
        </select>
    </div>

    <div class='field'>
        <label>Description</label>
        <textarea name="band[description]"></textarea>

        <% if @band.errors.any? %>
            <p class="error-text"><%= "Description " + @band&.errors&.messages[:name].join(", ") %></p>
        <% end %>
    </div>

    <input type="submit" value="Create A Band!">
</form>