<h1>Update <%=@band.name%></h1>


<% if @band.errors.any? %>
    <p>There's something wrong</p>
    <% @band.errors.full_messages.each do |message| %>
    <ul>
        <li><%= message %> </li>
    </ul>
    <% end %>
<% end %>

<form action="<%=band_path%>" method="POST">
<input type="hidden" name="_method", value="put">
    <div class='field'>
        <label>Name</label>
        <input type="text" name="band[name]" value="<%=@band.name%>"/>
    </div>

    <div class='field'>
        <label>Genre</label>
        <select name="band[genre_id]" >
            <% @genres.each do |genre| %>
                <option <%= "selected" if genre.id == @band.genre_id %> value=<%=genre.id%>><%= genre.name %></option>
            <% end %>
        </select>
    </div>

    <div class='field'>
        <label>Description</label>
        <textarea name="band[description]"><%=@band.description%></textarea>
    </div>

    <input type="submit" value="update">
</form>